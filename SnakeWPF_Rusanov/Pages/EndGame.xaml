<Page x:Class="SnakeWPF_Rusanov.Pages.EndGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SnakeWPF_Rusanov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EndGame">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/SnakeWPF_Rusanov;component/Image/background.jpg"/>
        </Grid.Background>
        <Grid>
            <Grid Width="320" Height="200" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.Background>
                    <ImageBrush ImageSource="/SnakeWPF_Rusanov;component/Image/background_2.jpg"/>
                </Grid.Background>
                <Label
                    x:Name="name"
                    Content="Rusanov"
                    Margin="45 18 45 0"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Center"
                    FontFamily="Forte"
                    FontSize="16"/>
                <Label
                    x:Name="glasses"
                    Content="90 glasses"
                    Margin="45 50 45 0"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Center"
                    FontFamily="Forte"/>
                <Label
                    x:Name="top"
                    Content="999"
                    Margin="25 76 45 0"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Center"
                    FontFamily="Forte" 
                    Height="84"
                    VerticalContentAlignment="Center"
                    FontSize="48"/>
                <Button
                    Click="OpenHome"
                    Content="Main menu"
                    HorizontalAlignment="Left"
                    Margin="45 0 0 10"
                    VerticalAlignment="Bottom"
                    Width="230"
                    Height="25"
                    FontFamily="Forte"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
